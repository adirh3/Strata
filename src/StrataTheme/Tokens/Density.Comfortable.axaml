<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ═══════════════════════════════════════════════════════════
       STRATA UI – COMFORTABLE DENSITY (default)
       Standard sizing for general-purpose desktop apps
       ═══════════════════════════════════════════════════════════ -->

  <!-- Control heights -->
  <x:Double x:Key="Size.ControlHeightS">28</x:Double>
  <x:Double x:Key="Size.ControlHeightM">36</x:Double>
  <x:Double x:Key="Size.ControlHeightL">44</x:Double>

  <!-- Padding -->
  <Thickness x:Key="Padding.ControlH">12,0</Thickness>
  <Thickness x:Key="Padding.Control">12,6</Thickness>
  <Thickness x:Key="Padding.ControlWide">16,8</Thickness>
  <Thickness x:Key="Padding.Section">16,12</Thickness>
  <Thickness x:Key="Padding.Card">20,16</Thickness>

  <!-- Font sizes -->
  <x:Double x:Key="Font.SizeCaption">12</x:Double>
  <x:Double x:Key="Font.SizeBody">14</x:Double>
  <x:Double x:Key="Font.SizeBodyStrong">14</x:Double>
  <x:Double x:Key="Font.SizeSubtitle">16</x:Double>
  <x:Double x:Key="Font.SizeTitle">20</x:Double>

  <!-- Spacing -->
  <x:Double x:Key="Space.S">8</x:Double>
  <x:Double x:Key="Space.M">12</x:Double>
  <x:Double x:Key="Space.L">16</x:Double>

  <!-- DataGrid row height -->
  <x:Double x:Key="Size.DataGridRowHeight">36</x:Double>
  <x:Double x:Key="Size.DataGridHeaderHeight">40</x:Double>

</ResourceDictionary>
