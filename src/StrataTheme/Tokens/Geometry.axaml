<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ═══════════════════════════════════════════════════════════
       STRATA UI – GEOMETRY TOKENS
       Radii, borders, spacing, control sizes
       ═══════════════════════════════════════════════════════════ -->

  <!-- ── Corner Radii ── -->
  <CornerRadius x:Key="Radius.None">0</CornerRadius>
  <CornerRadius x:Key="Radius.Base">6</CornerRadius>
  <CornerRadius x:Key="Radius.Interactive">10</CornerRadius>
  <CornerRadius x:Key="Radius.Overlay">14</CornerRadius>
  <CornerRadius x:Key="Radius.Full">9999</CornerRadius>

  <!-- ── Border Thickness ── -->
  <Thickness x:Key="Stroke.Thin">1</Thickness>
  <Thickness x:Key="Stroke.Medium">1.5</Thickness>
  <Thickness x:Key="Stroke.Focus">2</Thickness>

  <!-- ── Spacing Scale ── -->
  <x:Double x:Key="Space.XXS">2</x:Double>
  <x:Double x:Key="Space.XS">4</x:Double>
  <x:Double x:Key="Space.S">8</x:Double>
  <x:Double x:Key="Space.M">12</x:Double>
  <x:Double x:Key="Space.L">16</x:Double>
  <x:Double x:Key="Space.XL">24</x:Double>
  <x:Double x:Key="Space.XXL">32</x:Double>
  <x:Double x:Key="Space.XXXL">48</x:Double>

  <!-- ── Padding Presets ── -->
  <Thickness x:Key="Padding.ControlH">12,0</Thickness>
  <Thickness x:Key="Padding.Control">12,6</Thickness>
  <Thickness x:Key="Padding.ControlWide">16,8</Thickness>
  <Thickness x:Key="Padding.Section">16,12</Thickness>
  <Thickness x:Key="Padding.Card">20,16</Thickness>
  <Thickness x:Key="Padding.Page">24,20</Thickness>

  <!-- ── Control Sizes (Comfortable) ── -->
  <x:Double x:Key="Size.ControlHeightS">28</x:Double>
  <x:Double x:Key="Size.ControlHeightM">36</x:Double>
  <x:Double x:Key="Size.ControlHeightL">44</x:Double>
  <x:Double x:Key="Size.IconS">14</x:Double>
  <x:Double x:Key="Size.IconM">18</x:Double>
  <x:Double x:Key="Size.IconL">24</x:Double>

  <!-- ── Focus ring ── -->
  <x:Double x:Key="Size.FocusRingOffset">2</x:Double>
  <Thickness x:Key="Stroke.FocusRing">2</Thickness>

  <!-- ── Scrollbar ── -->
  <x:Double x:Key="Size.ScrollbarThick">10</x:Double>
  <x:Double x:Key="Size.ScrollbarThin">6</x:Double>

     <!-- ── Motion Primitives ── -->
     <x:Double x:Key="Motion.DurationFastMs">120</x:Double>
     <x:Double x:Key="Motion.DurationNormalMs">180</x:Double>
     <x:Double x:Key="Motion.DurationSlowMs">260</x:Double>
     <x:Double x:Key="Motion.ScalePress">0.98</x:Double>
     <x:Double x:Key="Motion.ScaleHover">1.04</x:Double>
     <x:Double x:Key="Motion.GlowIdleOpacity">0.72</x:Double>
     <x:Double x:Key="Motion.GlowActiveOpacity">1.0</x:Double>

</ResourceDictionary>
