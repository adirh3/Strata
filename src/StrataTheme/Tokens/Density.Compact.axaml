<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ═══════════════════════════════════════════════════════════
       STRATA UI – COMPACT DENSITY
       Tighter sizing for data-heavy / power-user UIs
       ═══════════════════════════════════════════════════════════ -->

  <!-- Control heights -->
  <x:Double x:Key="Size.ControlHeightS">24</x:Double>
  <x:Double x:Key="Size.ControlHeightM">30</x:Double>
  <x:Double x:Key="Size.ControlHeightL">36</x:Double>

  <!-- Padding -->
  <Thickness x:Key="Padding.ControlH">8,0</Thickness>
  <Thickness x:Key="Padding.Control">8,4</Thickness>
  <Thickness x:Key="Padding.ControlWide">12,5</Thickness>
  <Thickness x:Key="Padding.Section">12,8</Thickness>
  <Thickness x:Key="Padding.Card">14,10</Thickness>

  <!-- Font sizes – slightly smaller -->
  <x:Double x:Key="Font.SizeCaption">11</x:Double>
  <x:Double x:Key="Font.SizeBody">13</x:Double>
  <x:Double x:Key="Font.SizeBodyStrong">13</x:Double>
  <x:Double x:Key="Font.SizeSubtitle">14</x:Double>
  <x:Double x:Key="Font.SizeTitle">17</x:Double>

  <!-- Spacing -->
  <x:Double x:Key="Space.S">6</x:Double>
  <x:Double x:Key="Space.M">8</x:Double>
  <x:Double x:Key="Space.L">12</x:Double>

  <!-- DataGrid row height -->
  <x:Double x:Key="Size.DataGridRowHeight">28</x:Double>
  <x:Double x:Key="Size.DataGridHeaderHeight">32</x:Double>

</ResourceDictionary>
