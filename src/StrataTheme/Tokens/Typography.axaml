<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ═══════════════════════════════════════════════════════════
       STRATA UI – TYPOGRAPHY TOKENS
       Font families, weights, and sizes
       ═══════════════════════════════════════════════════════════ -->

  <!-- System font stack: Segoe UI Variable (Win11+), Segoe UI (Win10),
       SF Pro (macOS), then generic sans-serif fallback -->
  <FontFamily x:Key="Font.Family">Segoe UI Variable, Segoe UI, SF Pro Display, -apple-system, Helvetica Neue, Arial, sans-serif</FontFamily>
  <FontFamily x:Key="Font.FamilyMono">Cascadia Code, JetBrains Mono, Consolas, Courier New, monospace</FontFamily>

  <!-- Font weights -->
  <x:String x:Key="Font.WeightRegular">Regular</x:String>
  <x:String x:Key="Font.WeightMedium">Medium</x:String>
  <x:String x:Key="Font.WeightSemiBold">SemiBold</x:String>
  <x:String x:Key="Font.WeightBold">Bold</x:String>

  <!-- ── Comfortable Density Font Sizes (default) ── -->
  <x:Double x:Key="Font.SizeCaption">12</x:Double>
  <x:Double x:Key="Font.SizeBody">14</x:Double>
  <x:Double x:Key="Font.SizeBodyStrong">14</x:Double>
     <x:Double x:Key="Font.SizeSubtitle">15</x:Double>
     <x:Double x:Key="Font.SizeTitle">19</x:Double>
     <x:Double x:Key="Font.SizeHeadline">24</x:Double>
     <x:Double x:Key="Font.SizeDisplay">32</x:Double>

</ResourceDictionary>
