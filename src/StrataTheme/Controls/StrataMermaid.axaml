<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:StrataTheme.Controls">
  <Styles.Resources>
    <ResourceDictionary>
      <ControlTheme x:Key="{x:Type controls:StrataMermaid}" TargetType="controls:StrataMermaid">
        <Setter Property="Template">
          <ControlTemplate>
            <Panel ClipToBounds="True">
              <Panel Name="PART_DiagramHost" />

              <!-- Zoom toolbar -->
              <Border Name="PART_ZoomBar"
                      HorizontalAlignment="Right" VerticalAlignment="Bottom"
                      Margin="0,0,8,8"
                      Background="{DynamicResource Brush.Surface1}"
                      BorderBrush="{DynamicResource Brush.BorderSubtle}"
                      BorderThickness="1" CornerRadius="6"
                      Padding="2"
                      Opacity="0"
                      IsHitTestVisible="True">
                <Border.Transitions>
                  <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                  </Transitions>
                </Border.Transitions>
                <StackPanel Orientation="Horizontal" Spacing="1">
                  <Button Name="PART_ZoomOut" Width="28" Height="28"
                          Padding="0" Background="Transparent"
                          BorderThickness="0" CornerRadius="4"
                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                          Foreground="{DynamicResource Brush.TextSecondary}"
                          FontSize="14" Content="−" />
                  <TextBlock Name="PART_ZoomLabel" Width="38"
                             TextAlignment="Center" VerticalAlignment="Center"
                             Foreground="{DynamicResource Brush.TextTertiary}"
                             FontSize="10" Text="100%" />
                  <Button Name="PART_ZoomIn" Width="28" Height="28"
                          Padding="0" Background="Transparent"
                          BorderThickness="0" CornerRadius="4"
                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                          Foreground="{DynamicResource Brush.TextSecondary}"
                          FontSize="14" Content="+" />
                  <Button Name="PART_ZoomReset" Width="28" Height="28"
                          Padding="0" Background="Transparent"
                          BorderThickness="0" CornerRadius="4"
                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                          Foreground="{DynamicResource Brush.TextSecondary}"
                          FontSize="11" Content="⊙" />
                </StackPanel>
              </Border>
            </Panel>
          </ControlTemplate>
        </Setter>
      </ControlTheme>
    </ResourceDictionary>
  </Styles.Resources>
</Styles>
