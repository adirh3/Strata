<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:StrataTheme.Controls"
        xmlns:strata="using:StrataTheme">

  <!-- ═══════════════════════════════════════════════════════════════
       StrataChatComposer
       Clean bottom composer: borderless text area on top, toolbar
       below with attach +, real ComboBox selectors for model/quality,
       suggestion chips, and circular accent send button.
       ═══════════════════════════════════════════════════════════════ -->

  <Styles.Resources>
    <ResourceDictionary>
      <ControlTheme x:Key="{x:Type controls:StrataChatComposer}" TargetType="controls:StrataChatComposer">
        <Setter Property="Template">
          <ControlTemplate>
            <Border Name="PART_Root"
                    Background="{DynamicResource Brush.Surface0}"
                    BorderBrush="{DynamicResource Brush.BorderSubtle}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="0"
                    BoxShadow="0 1 4 0 #0A000000">
              <Border.Transitions>
                <Transitions>
                  <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
                  <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2" />
                </Transitions>
              </Border.Transitions>

              <StackPanel>

                <!-- Agent & skill chips -->
                <WrapPanel Name="PART_ChipsRow"
                           Orientation="Horizontal"
                           Margin="12,10,12,2">
                  <!-- Agent chip (hidden via :has-agent pseudo-class) -->
                  <Border Name="PART_AgentChip"
                          CornerRadius="12"
                          Padding="8,4,4,4"
                          Margin="0,0,6,4"
                          Background="{DynamicResource Brush.AccentSubtle}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <TextBlock Text="{TemplateBinding AgentGlyph}"
                                 FontSize="11"
                                 Foreground="{DynamicResource Brush.AccentDefault}"
                                 VerticalAlignment="Center" />
                      <TextBlock Text="{TemplateBinding AgentName}"
                                 FontSize="11"
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource Brush.AccentDefault}"
                                 VerticalAlignment="Center" />
                      <Button Name="PART_AgentRemoveButton"
                              Classes="subtle"
                              Width="16" Height="16"
                              Padding="0" MinHeight="0" MinWidth="0"
                              CornerRadius="8"
                              VerticalAlignment="Center"
                              Cursor="Hand">
                        <TextBlock Text="×" FontSize="11"
                                   Foreground="{DynamicResource Brush.AccentDefault}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                      </Button>
                    </StackPanel>
                  </Border>
                  <!-- Skill chips are appended here programmatically -->
                </WrapPanel>

                <!-- Text input -->
                <Panel>
                  <TextBox Name="PART_Input"
                           Classes="composer-embed"
                           Text="{Binding PromptText, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                           Watermark="{TemplateBinding Placeholder}"
                           AcceptsReturn="True"
                           TextWrapping="Wrap"
                           MinHeight="40" MaxHeight="180"
                           BorderThickness="0"
                           Background="Transparent"
                           Padding="14,12,14,6"
                           VerticalContentAlignment="Top"
                           FontSize="13"
                           CornerRadius="0"
                           MinWidth="0" />

                  <!-- Inline autocomplete popup (anchored to TextBox via Panel) -->
                  <Popup Name="PART_AutoCompletePopup"
                         IsLightDismissEnabled="True"
                         Placement="AnchorAndGravity"
                         PlacementAnchor="BottomLeft"
                         PlacementGravity="BottomRight"
                         WindowManagerAddShadowHint="False"
                         strata:PopupAnimationHelper.EnableOpenAnimation="True">
                    <Border Background="{DynamicResource Brush.Surface1}"
                            BorderBrush="{DynamicResource Brush.BorderDefault}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="4"
                            MinWidth="220"
                            MaxWidth="330"
                            BoxShadow="0 4 16 0 #1A000000">
                      <ScrollViewer MaxHeight="260"
                                    HorizontalScrollBarVisibility="Disabled"
                                    VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="PART_AutoCompletePanel" Spacing="1" />
                      </ScrollViewer>
                    </Border>
                  </Popup>
                </Panel>

                <!-- Toolbar row -->
                <Grid Margin="8,4,8,8" ColumnDefinitions="*,Auto">

                  <!-- Left: attach + selectors + chips (wrap to stay responsive) -->
                  <WrapPanel Grid.Column="0"
                             Orientation="Horizontal"
                             Margin="0,0,8,0"
                             VerticalAlignment="Bottom">

                    <!-- Attach button -->
                    <Button Name="PART_AttachButton"
                            Classes="subtle"
                            Width="28" Height="28"
                            Padding="0" MinHeight="0" MinWidth="0"
                            CornerRadius="6"
                            VerticalAlignment="Center"
                            ToolTip.Tip="Attach"
                            Margin="0,0,6,6">
                      <TextBlock Text="+" FontSize="16" FontWeight="SemiBold"
                                 Foreground="{DynamicResource Brush.TextSecondary}"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Button>

                    <!-- Mention: add agent or skill -->
                    <Button Name="PART_MentionButton"
                            Classes="subtle"
                            Width="28" Height="28"
                            Padding="0" MinHeight="0" MinWidth="0"
                            CornerRadius="6"
                            VerticalAlignment="Center"
                            ToolTip.Tip="Mention agent or skill"
                            Margin="0,0,6,6">
                      <Viewbox Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Canvas Width="16" Height="16">
                          <!-- Person silhouette -->
                          <Path Fill="{DynamicResource Brush.TextSecondary}"
                                Data="M6,8 C7.66,8 9,6.66 9,5 C9,3.34 7.66,2 6,2 C4.34,2 3,3.34 3,5 C3,6.66 4.34,8 6,8 Z M6,9.5 C3.33,9.5 0,10.84 0,12.5 L0,14 L12,14 L12,12.5 C12,10.84 8.67,9.5 6,9.5 Z" />
                          <!-- Plus badge -->
                          <Path Fill="{DynamicResource Brush.TextSecondary}"
                                Data="M14,6 L14,4 L13,4 L13,6 L11,6 L11,7 L13,7 L13,9 L14,9 L14,7 L16,7 L16,6 Z" />
                        </Canvas>
                      </Viewbox>
                    </Button>

                    <!-- Model ComboBox -->
                    <ComboBox Name="PART_ModelCombo"
                              Classes="composer-select"
                              ItemsSource="{TemplateBinding Models}"
                              SelectedItem="{Binding SelectedModel, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                              MinWidth="100"
                              Height="28" MinHeight="0" Padding="8,4,6,4"
                              FontSize="12"
                              CornerRadius="6"
                              Background="{DynamicResource Brush.Surface2}"
                              BorderThickness="0"
                              VerticalAlignment="Center"
                              Margin="0,0,6,6" />

                    <!-- Quality ComboBox -->
                    <ComboBox Name="PART_QualityCombo"
                              Classes="composer-select"
                              ItemsSource="{TemplateBinding QualityLevels}"
                              SelectedItem="{Binding SelectedQuality, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                              MinWidth="82"
                              Height="28" MinHeight="0" Padding="8,4,6,4"
                              FontSize="12"
                              CornerRadius="6"
                              Background="{DynamicResource Brush.Surface2}"
                              BorderThickness="0"
                              VerticalAlignment="Center"
                              Margin="0,0,6,6" />

                    <!-- MCP server selector button -->
                    <Panel Name="PART_McpPanel" Margin="0,0,6,6">
                      <Button Name="PART_McpButton"
                              Classes="subtle"
                              Height="28"
                              Padding="6,4"
                              MinHeight="0" MinWidth="0"
                              CornerRadius="6"
                              Background="{DynamicResource Brush.Surface2}"
                              VerticalAlignment="Center"
                              ToolTip.Tip="MCP Servers">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                          <Viewbox Width="13" Height="13" VerticalAlignment="Center">
                            <Canvas Width="16" Height="16">
                              <!-- Plug/connector icon -->
                              <Path Fill="{DynamicResource Brush.TextSecondary}"
                                    Data="M10,0 L10,4 L9,4 L9,2 L7,2 L7,6.5 L9.5,6.5 C10.88,6.5 12,7.62 12,9 L12,10 L16,10 L16,12 L12,12 L12,13 C12,14.38 10.88,15.5 9.5,15.5 L6.5,15.5 C5.12,15.5 4,14.38 4,13 L4,12 L0,12 L0,10 L4,10 L4,9 C4,7.62 5.12,6.5 6.5,6.5 L7,6.5 L7,2 L6,2 L6,4 L4,4 L4,0 L6,0 L6,2 L7,2 L7,0 L9,0 L9,2 L10,2 L10,0 Z" />
                            </Canvas>
                          </Viewbox>
                          <TextBlock Name="PART_McpCount" Text="" FontSize="11"
                                     Foreground="{DynamicResource Brush.TextSecondary}"
                                     VerticalAlignment="Center" />
                        </StackPanel>
                      </Button>
                      <Popup Name="PART_McpPopup"
                             IsLightDismissEnabled="True"
                             Placement="Top"
                             PlacementTarget="{Binding #PART_McpButton}"
                             WindowManagerAddShadowHint="False"
                             strata:PopupAnimationHelper.EnableOpenAnimation="True">
                        <Border Background="{DynamicResource Brush.Surface1}"
                                BorderBrush="{DynamicResource Brush.BorderSubtle}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="6"
                                MinWidth="220"
                                MaxWidth="300"
                                BoxShadow="0 8 24 0 #20000000, 0 2 6 0 #08000000"
                                RenderTransformOrigin="0.5,1"
                                RenderTransform="scaleY(1)">
                          <Border.Transitions>
                            <Transitions>
                              <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.12" Easing="CubicEaseOut" />
                            </Transitions>
                          </Border.Transitions>
                          <StackPanel Spacing="0">
                            <TextBlock Text="MCP SERVERS"
                                       FontSize="10" FontWeight="SemiBold"
                                       Foreground="{DynamicResource Brush.TextTertiary}"
                                       Margin="10,6,10,6"
                                       LetterSpacing="0.8" />
                            <ScrollViewer MaxHeight="260"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto">
                              <StackPanel Name="PART_McpPopupPanel" Spacing="0" />
                            </ScrollViewer>
                          </StackPanel>
                        </Border>
                      </Popup>
                    </Panel>

                    <!-- Suggestion chips -->
                    <Button Name="PART_ActionA" Classes="subtle"
                            Content="{TemplateBinding SuggestionA}"
                            Height="28" Padding="8,4" MinHeight="0" MaxWidth="170"
                            CornerRadius="6" FontSize="12"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Margin="0,0,6,6"
                            Foreground="{DynamicResource Brush.TextSecondary}" />
                    <Button Name="PART_ActionB" Classes="subtle"
                            Content="{TemplateBinding SuggestionB}"
                            Height="28" Padding="8,4" MinHeight="0" MaxWidth="170"
                            CornerRadius="6" FontSize="12"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Margin="0,0,6,6"
                            Foreground="{DynamicResource Brush.TextSecondary}" />
                    <Button Name="PART_ActionC" Classes="subtle"
                            Content="{TemplateBinding SuggestionC}"
                            Height="28" Padding="8,4" MinHeight="0" MaxWidth="170"
                            CornerRadius="6" FontSize="12"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Margin="0,0,6,6"
                            Foreground="{DynamicResource Brush.TextSecondary}" />
                      </WrapPanel>

                  <!-- Right: voice + send -->
                  <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6" VerticalAlignment="Bottom" Margin="0,0,0,6">
                    <Button Name="PART_VoiceButton"
                            Classes="subtle"
                            Width="28" Height="28"
                            Padding="0" MinHeight="0" MinWidth="0"
                            CornerRadius="6"
                            VerticalAlignment="Bottom"
                            ToolTip.Tip="Voice">
                      <Viewbox Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Stretch="Uniform"
                              Width="16" Height="16"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Fill="{DynamicResource Brush.TextTertiary}"
                              Data="M8,1.8 C9.3,1.8 10.4,2.9 10.4,4.2 L10.4,7.3 C10.4,8.6 9.3,9.7 8,9.7 C6.7,9.7 5.6,8.6 5.6,7.3 L5.6,4.2 C5.6,2.9 6.7,1.8 8,1.8 Z M3.6,7.2 L4.8,7.2 C4.8,9.1 6.1,10.7 8,11 C9.9,10.7 11.2,9.1 11.2,7.2 L12.4,7.2 C12.4,9.6 10.7,11.7 8.6,12.2 L8.6,14.2 L7.4,14.2 L7.4,12.2 C5.3,11.7 3.6,9.6 3.6,7.2 Z" />
                      </Viewbox>
                    </Button>

                    <Button Name="PART_SendButton"
                            Width="34" Height="34"
                            Padding="0" MinHeight="0" MinWidth="0"
                            CornerRadius="999"
                            Background="{DynamicResource Brush.AccentGradient}"
                            Foreground="{DynamicResource Brush.TextOnAccent}"
                            VerticalAlignment="Bottom"
                            ToolTip.Tip="Send (Enter)"
                          RenderTransformOrigin="0.5,0.5"
                          RenderTransform="translateY(3px)">
                      <Button.Transitions>
                        <Transitions>
                          <BrushTransition Property="Background" Duration="0:0:0.1" />
                          <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.08" Easing="CubicEaseOut" />
                        </Transitions>
                      </Button.Transitions>
                      <Viewbox Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid Width="16" Height="16">
                          <Path Name="PART_SendIcon"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="{TemplateBinding Foreground}"
                                Data="M8,1.5 L13,6.5 H10.2 V14.5 H5.8 V6.5 H3 Z" />
                          <Path Name="PART_StopIcon"
                                IsVisible="False"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="{TemplateBinding Foreground}"
                                Data="M4.5,4.5 H11.5 V11.5 H4.5 Z" />
                        </Grid>
                      </Viewbox>
                    </Button>
                  </StackPanel>
                </Grid>
              </StackPanel>
            </Border>
          </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ Border#PART_Root:pointerover">
          <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderDefault}" />
          <Setter Property="BoxShadow" Value="0 2 8 0 #11000000" />
        </Style>

        <!-- Focus ring on the outer container -->
        <Style Selector="^:focus-within /template/ Border#PART_Root">
          <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderDefault}" />
          <Setter Property="BoxShadow" Value="0 0 0 1 #28818CF8, 0 2 8 0 #11000000" />
        </Style>

        <!-- Send button hover/press -->
        <Style Selector="^ /template/ Button#PART_SendButton:pointerover">
          <Setter Property="Background" Value="{DynamicResource Brush.AccentGradientHover}" />
          <Setter Property="RenderTransform" Value="translateY(3px) scale(1.05)" />
        </Style>
        <Style Selector="^ /template/ Button#PART_SendButton:pressed">
          <Setter Property="Background" Value="{DynamicResource Brush.AccentGradientPressed}" />
          <Setter Property="RenderTransform" Value="translateY(3px) scale(0.93)" />
        </Style>

        <!-- Busy: stop mode -->
        <Style Selector="^:busy /template/ Button#PART_SendButton">
          <Setter Property="Background" Value="{DynamicResource Brush.DangerDefault}" />
        </Style>
        <Style Selector="^:busy /template/ Button#PART_SendButton:pointerover">
          <Setter Property="Background" Value="{DynamicResource Brush.DangerHover}" />
        </Style>
        <Style Selector="^:busy /template/ Path#PART_SendIcon">
          <Setter Property="IsVisible" Value="False" />
        </Style>
        <Style Selector="^:busy /template/ Path#PART_StopIcon">
          <Setter Property="IsVisible" Value="True" />
        </Style>

        <!-- Empty: dim send -->
        <Style Selector="^:empty:not(:busy) /template/ Button#PART_SendButton">
          <Setter Property="Opacity" Value="0.35" />
        </Style>

        <!-- Hide chips when empty -->
        <Style Selector="^:a-empty /template/ Button#PART_ActionA">
          <Setter Property="IsVisible" Value="False" />
        </Style>
        <Style Selector="^:b-empty /template/ Button#PART_ActionB">
          <Setter Property="IsVisible" Value="False" />
        </Style>
        <Style Selector="^:c-empty /template/ Button#PART_ActionC">
          <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- Hide attach when disabled -->
        <Style Selector="^:not(:can-attach) /template/ Button#PART_AttachButton">
          <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- Hide selectors if no sources are provided -->
        <Style Selector="^:not(:has-models) /template/ ComboBox#PART_ModelCombo">
          <Setter Property="IsVisible" Value="False" />
        </Style>
        <Style Selector="^:not(:has-quality) /template/ ComboBox#PART_QualityCombo">
          <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- Hide MCP button when no MCP servers are available -->
        <Style Selector="^:not(:has-mcp-options) /template/ Panel#PART_McpPanel">
          <Setter Property="IsVisible" Value="False" />
        </Style>
        <!-- Highlight MCP button when some (not all) MCPs are selected -->
        <Style Selector="^:has-mcps /template/ Button#PART_McpButton">
          <Setter Property="Background" Value="{DynamicResource Brush.AccentSubtle}" />
        </Style>
        <Style Selector="^:has-mcps /template/ Button#PART_McpButton Path">
          <Setter Property="Fill" Value="{DynamicResource Brush.AccentDefault}" />
        </Style>
        <Style Selector="^:has-mcps /template/ Button#PART_McpButton TextBlock#PART_McpCount">
          <Setter Property="Foreground" Value="{DynamicResource Brush.AccentDefault}" />
        </Style>
        <Style Selector="^ /template/ Button#PART_McpButton:pointerover">
          <Setter Property="Background" Value="{DynamicResource Brush.ControlHover}" />
        </Style>

        <!-- Hide chips row when no agent and no skills -->
        <Style Selector="^:not(:has-chips) /template/ WrapPanel#PART_ChipsRow">
          <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- Hide agent chip when no agent is set -->
        <Style Selector="^:not(:has-agent) /template/ Border#PART_AgentChip">
          <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- Voice button: recording state -->
        <Style Selector="^:recording /template/ Button#PART_VoiceButton">
          <Setter Property="Background" Value="{DynamicResource Brush.DangerSubtle}" />
        </Style>
        <Style Selector="^:recording /template/ Button#PART_VoiceButton Path">
          <Setter Property="Fill" Value="{DynamicResource Brush.DangerDefault}" />
        </Style>
      </ControlTheme>
    </ResourceDictionary>
  </Styles.Resources>

  <!-- Embedded TextBox chrome removal (regular styles, outside ControlTheme) -->
  <Style Selector="TextBox.composer-embed /template/ Border#PART_Border">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="BoxShadow" Value="0 0 0 0 Transparent" />
    <Setter Property="MinHeight" Value="0" />
  </Style>
  <Style Selector="TextBox.composer-embed:focus /template/ Border#PART_Border">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="BoxShadow" Value="0 0 0 0 Transparent" />
  </Style>
  <Style Selector="TextBox.composer-embed:pointerover /template/ Border#PART_Border">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="BoxShadow" Value="0 0 0 0 Transparent" />
  </Style>

  <Style Selector="ComboBox.composer-select /template/ Border#Border">
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="{DynamicResource Brush.Surface2}" />
    <Setter Property="CornerRadius" Value="6" />
  </Style>
  <Style Selector="ComboBox.composer-select:pointerover /template/ Border#Border">
    <Setter Property="Background" Value="{DynamicResource Brush.ControlHover}" />
  </Style>
  <Style Selector="ComboBox.composer-select:focus-visible /template/ Border#Border">
    <Setter Property="BoxShadow" Value="0 0 0 1 #28818CF8" />
  </Style>

  <!-- Programmatic skill chip styles -->
  <Style Selector="Border.composer-skill-chip">
    <Setter Property="Background" Value="{DynamicResource Brush.Surface2}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderSubtle}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="8,3,4,3" />
    <Setter Property="Margin" Value="0,0,6,4" />
  </Style>
  <Style Selector="Border.composer-skill-chip TextBlock.chip-glyph">
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextTertiary}" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>
  <Style Selector="Border.composer-skill-chip TextBlock.chip-name">
    <Setter Property="FontSize" Value="11" />
    <Setter Property="FontWeight" Value="Medium" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>
  <Style Selector="Border.composer-skill-chip TextBlock.chip-remove-icon">
    <Setter Property="FontSize" Value="10" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextTertiary}" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>

  <!-- MCP popup item styles -->
  <Style Selector="Border.mcp-popup-item">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.1" />
      </Transitions>
    </Setter>
  </Style>
  <Style Selector="Border.mcp-popup-item:pointerover">
    <Setter Property="Background" Value="{DynamicResource Brush.ControlHover}" />
  </Style>

  <!-- MCP popup separator -->
  <Style Selector="Border.mcp-popup-separator">
    <Setter Property="Background" Value="{DynamicResource Brush.BorderSubtle}" />
  </Style>

  <!-- Autocomplete popup item styles -->
  <Style Selector="Border.autocomplete-item">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="Padding" Value="8,5" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.1" />
      </Transitions>
    </Setter>
  </Style>
  <Style Selector="Border.autocomplete-item:pointerover">
    <Setter Property="Background" Value="{DynamicResource Brush.ControlHover}" />
  </Style>
  <Style Selector="Border.autocomplete-item.selected">
    <Setter Property="Background" Value="{DynamicResource Brush.AccentSubtle}" />
  </Style>
  <Style Selector="TextBlock.autocomplete-header">
    <Setter Property="FontSize" Value="10" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextTertiary}" />
    <Setter Property="Margin" Value="8,6,8,2" />
  </Style>
  <Style Selector="Border.autocomplete-item TextBlock.autocomplete-glyph">
    <Setter Property="FontSize" Value="13" />
    <Setter Property="Width" Value="18" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}" />
  </Style>
  <Style Selector="Border.autocomplete-item TextBlock.autocomplete-name">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="FontWeight" Value="Medium" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Margin" Value="6,0,0,0" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
  </Style>
  <Style Selector="Border.autocomplete-item TextBlock.autocomplete-kind">
    <Setter Property="FontSize" Value="10" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Margin" Value="12,0,0,0" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextTertiary}" />
  </Style>

</Styles>
