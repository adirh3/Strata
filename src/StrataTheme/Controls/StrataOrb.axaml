<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:StrataTheme.Controls">
  <Styles.Resources>
    <ResourceDictionary>

      <ControlTheme x:Key="{x:Type controls:StrataOrb}" TargetType="controls:StrataOrb">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Template">
          <ControlTemplate>
            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
              <Border Name="PART_Orb"
                      Width="8"
                      Height="8"
                      CornerRadius="100"
                      Background="{DynamicResource Brush.TextTertiary}"
                      Margin="2,0,0,0"
                      RenderTransformOrigin="0.5,0.5"
                      RenderTransform="scale(1)">
                <Border.Transitions>
                  <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut" />
                  </Transitions>
                </Border.Transitions>
              </Border>
              <TextBlock Name="PART_Label"
                         Text="{TemplateBinding Label}"
                         VerticalAlignment="Center"
                         FontSize="{DynamicResource Font.SizeCaption}"
                         FontWeight="Medium"
                         Foreground="{DynamicResource Brush.TextSecondary}"
                         IsVisible="{TemplateBinding Label, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
            </StackPanel>
          </ControlTemplate>
        </Setter>

        <Style Selector="^:idle /template/ Border#PART_Orb">
          <Setter Property="Background" Value="{DynamicResource Brush.TextTertiary}" />
        </Style>
        <Style Selector="^:active /template/ Border#PART_Orb">
          <Setter Property="Background" Value="{DynamicResource Brush.AccentDefault}" />
        </Style>
        <Style Selector="^:success /template/ Border#PART_Orb">
          <Setter Property="Background" Value="{DynamicResource Brush.SuccessDefault}" />
        </Style>
        <Style Selector="^:warning /template/ Border#PART_Orb">
          <Setter Property="Background" Value="{DynamicResource Brush.WarningDefault}" />
        </Style>
        <Style Selector="^:error /template/ Border#PART_Orb">
          <Setter Property="Background" Value="{DynamicResource Brush.DangerDefault}" />
        </Style>

        <Style Selector="^:interactive /template/ StackPanel">
          <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!-- Interactive press: scale bounce -->
        <Style Selector="^:interactive:pressed /template/ Border#PART_Orb">
          <Setter Property="RenderTransform" Value="scale(1.5)" />
        </Style>
      </ControlTheme>

    </ResourceDictionary>
  </Styles.Resources>
</Styles>
