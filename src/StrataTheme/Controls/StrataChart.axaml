<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:StrataTheme.Controls">
  <Styles.Resources>
    <ResourceDictionary>
      <ControlTheme x:Key="{x:Type controls:StrataChart}" TargetType="controls:StrataChart">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
          <ControlTemplate>
            <Panel Name="PART_ChartHost"
                   Height="{TemplateBinding ChartHeight}"
                   ClipToBounds="True" />
          </ControlTemplate>
        </Setter>
      </ControlTheme>
    </ResourceDictionary>
  </Styles.Resources>
</Styles>
