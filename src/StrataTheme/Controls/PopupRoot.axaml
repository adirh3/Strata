<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ═══════════════════════════════════════════════════════════
       STRATA UI – PopupRoot
       Fully transparent host so ContextMenu / Popup children
       own their own background, border, corner-radius, and shadow.
       No platform chrome, no gray rectangle behind rounded menus.
       ═══════════════════════════════════════════════════════════ -->

  <Style Selector="PopupRoot">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="TransparencyBackgroundFallback" Value="Transparent" />
    <Setter Property="TransparencyLevelHint" Value="Transparent" />
    <Setter Property="Template">
      <ControlTemplate>
        <Panel Background="Transparent">
          <ContentPresenter Name="PART_ContentPresenter"
                            Background="Transparent"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Content="{TemplateBinding Content}"
                            Padding="{TemplateBinding Padding}"
                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
        </Panel>
      </ControlTemplate>
    </Setter>
  </Style>

</Styles>
