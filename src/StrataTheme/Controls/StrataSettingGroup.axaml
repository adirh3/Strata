<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:StrataTheme.Controls">
  <Styles.Resources>
    <ResourceDictionary>
      <ControlTheme x:Key="{x:Type controls:StrataSettingGroup}" TargetType="controls:StrataSettingGroup">
        <Setter Property="FontFamily" Value="{DynamicResource Font.Family}" />
        <Setter Property="FontSize" Value="{DynamicResource Font.SizeBody}" />
        <Setter Property="ItemsPanel">
          <ItemsPanelTemplate>
            <StackPanel Spacing="0" />
          </ItemsPanelTemplate>
        </Setter>
        <Setter Property="Template">
          <ControlTemplate>
            <Border Name="PART_Card"
                    Background="{DynamicResource Brush.SurfaceCard}"
                    BorderBrush="{DynamicResource Brush.BorderDefault}"
                    BorderThickness="{DynamicResource Stroke.Thin}"
                    CornerRadius="{DynamicResource Radius.Interactive}"
                    Padding="{DynamicResource Padding.Card}"
                    BoxShadow="0 1 3 0 #0A000000, 0 5 14 0 #07000000">
              <Border.Transitions>
                <Transitions>
                  <BrushTransition Property="Background" Duration="0:0:0.15" />
                  <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                  <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.25" Easing="CubicEaseOut" />
                </Transitions>
              </Border.Transitions>
              <StackPanel Spacing="0">
                <!-- Header section -->
                <StackPanel Name="PART_HeaderSection" Spacing="2" Margin="0,0,0,12">
                  <TextBlock Text="{TemplateBinding Header}"
                             Classes="subtitle"
                             IsVisible="{TemplateBinding Header, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                  <TextBlock Text="{TemplateBinding Description}"
                             Classes="caption tertiary"
                             IsVisible="{TemplateBinding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                </StackPanel>

                <!-- Items -->
                <ItemsPresenter />
              </StackPanel>
            </Border>
          </ControlTemplate>
        </Setter>

        <!-- Focus-within: accent border -->
        <Style Selector="^:focus-within /template/ Border#PART_Card">
          <Setter Property="BorderBrush" Value="{DynamicResource Brush.AccentDefault}" />
        </Style>
      </ControlTheme>
    </ResourceDictionary>
  </Styles.Resources>
</Styles>
