<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:StrataTheme.Controls">
  <Styles.Resources>
    <ResourceDictionary>
      <ControlTheme x:Key="{x:Type controls:StrataCueSwitch}" TargetType="controls:StrataCueSwitch">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Template">
          <ControlTemplate>
            <Border Name="PART_Root"
                    Cursor="Hand"
                    Background="{DynamicResource Brush.Surface1}"
                    BorderBrush="{DynamicResource Brush.BorderSubtle}"
                    BorderThickness="{DynamicResource Stroke.Thin}"
                    CornerRadius="999"
                    Padding="8,3"
                    RenderTransformOrigin="0.5,0.5"
                    RenderTransform="scale(1)">
              <Border.Transitions>
                <Transitions>
                  <BrushTransition Property="Background" Duration="0:0:0.14" />
                  <BrushTransition Property="BorderBrush" Duration="0:0:0.14" />
                  <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.12" Easing="CubicEaseOut" />
                </Transitions>
              </Border.Transitions>

              <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                <Border Name="PART_Dot"
                        Width="6" Height="6"
                        CornerRadius="3"
                        Background="{DynamicResource Brush.TextTertiary}">
                  <Border.Transitions>
                    <Transitions>
                      <BrushTransition Property="Background" Duration="0:0:0.2" />
                    </Transitions>
                  </Border.Transitions>
                </Border>
                <TextBlock Name="PART_Label"
                           Text="Memory"
                           Classes="caption"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.TextSecondary}" />
              </StackPanel>
            </Border>
          </ControlTemplate>
        </Setter>

        <Style Selector="^:memory /template/ Border#PART_Dot">
          <Setter Property="Background" Value="{DynamicResource Brush.TextTertiary}" />
        </Style>
        <Style Selector="^:memory /template/ TextBlock#PART_Label">
          <Setter Property="Text" Value="Memory" />
        </Style>

        <Style Selector="^:grounded /template/ Border#PART_Dot">
          <Setter Property="Background" Value="{DynamicResource Brush.AccentDefault}" />
        </Style>
        <Style Selector="^:grounded /template/ TextBlock#PART_Label">
          <Setter Property="Text" Value="Grounded" />
          <Setter Property="Foreground" Value="{DynamicResource Brush.AccentDefault}" />
        </Style>

        <Style Selector="^:tool /template/ Border#PART_Dot">
          <Setter Property="Background" Value="{DynamicResource Brush.WarningDefault}" />
        </Style>
        <Style Selector="^:tool /template/ TextBlock#PART_Label">
          <Setter Property="Text" Value="Tool" />
        </Style>

        <Style Selector="^:locked /template/ Border#PART_Root">
          <Setter Property="Opacity" Value="0.55" />
          <Setter Property="Cursor" Value="Arrow" />
        </Style>

        <Style Selector="^:pressed /template/ Border#PART_Root">
          <Setter Property="RenderTransform" Value="scale(0.95)" />
        </Style>

        <Style Selector="^ /template/ Border#PART_Root:pointerover">
          <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderDefault}" />
        </Style>

        <Style Selector="^:focus-visible /template/ Border#PART_Root">
          <Setter Property="BorderBrush" Value="{DynamicResource Brush.AccentDefault}" />
        </Style>
      </ControlTheme>
    </ResourceDictionary>
  </Styles.Resources>
</Styles>
